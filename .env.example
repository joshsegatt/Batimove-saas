# Development Mode (set to true to use mock database instead of Firebase)
DEV_MODE=true

# Firebase Configuration (only needed when DEV_MODE=false)
# Option 1: Full service account JSON (recommended for production)
# FIREBASE_CREDENTIALS={"type":"service_account","project_id":"your-project-id",...}

# Option 2: Project ID only (for local development with gcloud auth)
FIREBASE_PROJECT_ID=your-firebase-project-id

# Optional: Enable debug mode (shows detailed errors)
DEBUG=false
